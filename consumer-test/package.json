{
  "name": "consumer-tests",
  "version": "1.0.0",
  "description": "Consumer contract tests using Pact",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:pact": "jest --testPathPattern=pact",
    "test:medico": "jest --testNamePattern=\"Medico App\"",
    "test:portal": "jest --testNamePattern=\"Portal Paciente\"",
    "test:validador": "jest --testNamePattern=\"Validador Aseguradora\"",
    "verify:provider": "node verify-provider.js"
  },
  "keywords": [
    "pact",
    "contract-testing",
    "microservices"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@pact-foundation/pact-node": "^10.17.7",
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^15.0.1",
    "@types/jest": "^29.5.13",
    "@types/node": "^24.5.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapping": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
